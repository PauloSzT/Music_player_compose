<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_wrapper_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@color/background_app"
    android:orientation="vertical">


    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.compose.ui.platform.ComposeView>



        <TextView
            style="@style/MarqueeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME PANEL:"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="47dp"
            tools:layout_editor_absoluteY="19dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="225dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fab_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/white"
            android:src="@drawable/ic_settings"
            app:shapeAppearanceOverlay="@style/curved"
            tools:layout_conversion_absoluteHeight="50dp"
            tools:layout_editor_absoluteY="19dp"
            tools:layout_editor_absoluteX="360dp"
            tools:layout_conversion_absoluteWidth="50dp" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/songs_list"
            android:textSize="24sp"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_editor_absoluteY="109dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="411dp" />





        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_play_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_playlist"
            android:tint="@color/black"
            app:backgroundTint="@color/white"
            app:maxImageSize="30dp"
            app:shapeAppearanceOverlay="@style/curved"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_editor_absoluteY="162dp"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_conversion_absoluteWidth="56dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_shuffle"
            android:tint="@color/black"
            app:backgroundTint="@color/white"
            app:maxImageSize="30dp"
            app:shapeAppearanceOverlay="@style/curved"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_editor_absoluteY="162dp"
            tools:layout_editor_absoluteX="226dp"
            tools:layout_conversion_absoluteWidth="56dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/song_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        tools:layout_conversion_absoluteHeight="214dp"
        tools:layout_editor_absoluteY="238dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="411dp" />
</LinearLayout>
